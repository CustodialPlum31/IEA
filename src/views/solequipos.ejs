<%- include("partials/_header2") %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Equipos Disponibles</h1>
  <% if (equipos.length > 0) { %>
    <form action="/solequipo/solicitar" method="GET">
      <div class="form-label">
        <label for="equipo_id">Selecciona un equipo:</label>
        <select class="form-control" name="equipo_id" id="equipo_id">
          <% equipos.forEach(equipo => { %>
            <option value="<%= equipo.id_e %>"><%= equipo.nombre %></option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-info mt-3">Pedir prestado</button>
    </form>
  <% } else { %>
    <p>No hay equipos disponibles actualmente.</p>
  <% } %>
</div>

<%- include("partials/_footer") %>
